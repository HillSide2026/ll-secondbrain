{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "System Admin Sweep Metadata Index",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "items"
  ],
  "properties": {
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "path"
        ],
        "properties": {
          "path": {
            "type": "string",
            "minLength": 1
          },
          "artifact_type": {
            "type": "string",
            "enum": [
              "playbook",
              "template",
              "doctrine",
              "agent_spec",
              "other"
            ]
          },
          "id": {
            "type": "string"
          },
          "version": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "missing_fields": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
